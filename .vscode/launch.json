{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Evaluate DTU",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/code/evaluation/evaluate.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/code",
            "args": [
                "/workspace/datasets/data_dtu/${input:scene}",
                "/workspace/outputs/data_dtu_test/${input:scene}",
                "--config_path",
                "configs/config_dtu_pbrnerf.json",
                "--export_brdf"
            ]
        }
    ],
    "inputs": [
        {
            "id": "scene",
            "type": "promptString",
            "description": "Enter the scene name:",
            "default": "DTU_scan24"
        }
    ]
}